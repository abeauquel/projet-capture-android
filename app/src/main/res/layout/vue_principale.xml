<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/barrre_navigation"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/retroactionDate"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_below="@+id/barrre_navigation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:text="Date : "
        android:textSize="36sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/labelMoyenne"
        android:layout_width="166dp"
        android:layout_height="73dp"
        android:layout_below="@+id/retroactionDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toStartOf="@+id/retroactionMoyenne"
        android:layout_toLeftOf="@+id/retroactionMoyenne"
        android:text="Moyenne:"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/retroactionMoyenne"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:layout_below="@+id/retroactionDate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/labelMax"
        android:layout_width="166dp"
        android:layout_height="73dp"
        android:layout_below="@+id/labelMoyenne"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/retroactionMax"
        android:layout_toLeftOf="@+id/retroactionMax"
        android:text="Max:"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/retroactionMax"
        android:layout_width="166dp"
        android:layout_height="58dp"
        android:layout_below="@+id/retroactionMoyenne"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/labelMin"
        android:layout_width="166dp"
        android:layout_height="73dp"
        android:layout_below="@+id/labelMax"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="79dp"
        android:layout_toStartOf="@+id/retroactionMin"
        android:layout_toLeftOf="@+id/retroactionMin"
        android:text="Min:"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/retroactionMin"
        android:layout_width="163dp"
        android:layout_height="59dp"
        android:layout_below="@+id/retroactionMax"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="82dp"
        android:textSize="24sp" />



</RelativeLayout>